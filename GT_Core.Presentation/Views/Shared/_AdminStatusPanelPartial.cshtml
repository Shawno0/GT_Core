@using GT_Core.Presentation.Models.ViewModels
@model StatusPanelViewModel

@{
    var statuses = Model.Statuses.Select(s => new SelectListItem( text: s.Name, value: s.Id.ToString())) ?? new List<SelectListItem>();
}

<h2>
    Status Panel
</h2>
@if (statuses.Count() > 0)
{
    <form asp-controller="Status" asp-action="Delete" method="delete" data-ajax="true" data-ajax-update="#status_panel" data-ajax-mode="replace" class="content-center" >
        <div class="input-container">
            <label asp-for="DeleteStatus"></label>
            <select asp-for=DeleteStatus asp-items="statuses"></select>
        </div>
        <button type="submit" value="Delete">Delete</button>
    </form>
}
<form asp-controller="Status" asp-action="Create" method="post" data-ajax="true" data-ajax-update="#status_panel" data-ajax-mode="replace" class="content-center" >
    <div class="input-container">
        <label asp-for="NewStatus.Name"></label>
        <input asp-for="NewStatus.Name" />
        <span asp-validation-for="NewStatus.Name" ></span>
    </div>
    <button type="submit" value="Create">Create</button>
</form>