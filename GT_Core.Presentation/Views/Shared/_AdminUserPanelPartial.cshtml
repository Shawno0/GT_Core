@using GT_Core.Presentation.Models.ViewModels
@model UserPanelViewModel

@{
    var users = Model.Users.Select(u => new SelectListItem( text: u.UserName, value: u.Id.ToString())) ?? new List<SelectListItem>();
}

<h2>
    User Panel
</h2>
<form asp-controller="Admin" asp-action="DeleteUser" method="delete" data-ajax="true" data-ajax-update="#user_panel" data-ajax-mode="replace" class="content-center" >
    <div class="input-container">
        <label asp-for="DeleteUser"></label>
        <select asp-for="DeleteUser" asp-items="users"></select>
    </div>
    <button type="submit" value="Delete">Delete</button>
</form>
<form asp-controller="Admin" asp-action="CreateUser" method="post" data-ajax="true" data-ajax-update="#user_panel" data-ajax-mode="replace" class="content-center" >
    <div class="input-container">
        <label asp-for="NewUser.UserName"></label>
        <input asp-for="NewUser.UserName" />
        <span asp-validation-for="NewUser.UserName" ></span>
    </div>
    <button type="submit" value="Create">Create</button>
</form>